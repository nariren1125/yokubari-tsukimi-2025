<!DOCTYPE html>
<html>
<head>
  <title><%= @item.name %> | 秋のよくばりお月見メーカー</title>

  <!-- ✅ OGPタグ -->
  <meta property="og:title" content="<%= @item.name %>" />
  <meta property="og:description" content="<%= @item.desc.truncate(80) %>" />
  <meta property="og:image" content="<%= image_url(@item.img) %>" />
  <meta property="og:url" content="<%= item_url(@item) %>" />
  <meta name="twitter:card" content="summary_large_image" />

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
</head>
<body>
  <h1><%= @item.name %></h1>
  <p><%= @item.desc %></p>
  <%= image_tag @item.img, alt: @item.name %>
</body>
</html>